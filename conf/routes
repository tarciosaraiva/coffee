# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                               controllers.Application.home
POST        /search                         controllers.Application.search
GET         /index/:index                   controllers.Application.index(index: String)

POST        /clients                        controllers.Clients.create
GET         /clients/:id                    controllers.Clients.show(id: Long)
POST        /clients/:id/transaction        controllers.Clients.transaction(id: Long)

# API Calls
POST        /api/search                     controllers.Api.search
GET         /api/index                      controllers.Api.indexes
GET         /api/index/:index               controllers.Api.index(index: String)
GET         /api/clients/:id                controllers.Api.client(id: Long)
POST        /api/clients                    controllers.Api.addClient
POST        /api/clients/:id/transaction    controllers.Api.addTransaction(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)
